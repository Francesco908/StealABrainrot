-- Carica Rayfield
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

-- Variabili
local BrainrotRubati = 0

-- Crea finestra
local Window = Rayfield:CreateWindow({
    Name = "BRAINROT HEIST",
    LoadingTitle = "Caricamento...",
    LoadingSubtitle = "by il tuo username",
    ConfigurationSaving = {
        Enabled = false,
        FolderName = nil,
        FileName = "BrainrotHeist"
    },
    Discord = {
        Enabled = false,
        Invite = "noinvitelink",
        RememberJoins = false
    },
    KeySystem = false
})

-- Crea tab
local MainTab = Window:CreateTab("üçë BRAINROT STEALER", 4483362458)

-- Sezione steal
local StealSection = MainTab:CreateSection("Instant Steal")

-- Contatore
local CounterLabel = MainTab:CreateLabel("Brainrot Rubati: 0")

-- Funzione per rubare
local function StealBrainrot()
    BrainrotRubati = BrainrotRubati + 1
    CounterLabel:Set("Brainrot Rubati: " .. BrainrotRubati)
    
    -- Notifica
    Rayfield:Notify({
        Title = "Brainrot Rubato!",
        Content = "Totale: " .. BrainrotRubati,
        Duration = 1,
        Image = 4483362458
    })
end

-- Pulsante per rubare ISTANTANEO
MainTab:CreateButton({
    Name = "üîì RUBA BRAINROT (ISTANTANEO)",
    Callback = function()
        StealBrainrot()
    end,
})

-- Sezione Admin
local AdminSection = MainTab:CreateSection("Admin Commands")

-- Auto steal con velocit√† regolabile
local AutoStealSpeed = 0.1
local AutoStealEnabled = false

MainTab:CreateSlider({
    Name = "Velocit√† Auto Steal",
    Range = {0.01, 2},
    Increment = 0.01,
    Suffix = "sec",
    CurrentValue = 0.1,
    Flag = "AutoStealSpeed",
    Callback = function(Value)
        AutoStealSpeed = Value
    end,
})

MainTab:CreateToggle({
    Name = "üî• AUTO STEAL",
    CurrentValue = false,
    Flag = "AutoStealToggle",
    Callback = function(Value)
        AutoStealEnabled = Value
        if AutoStealEnabled then
            spawn(function()
                while AutoStealEnabled do
                    wait(AutoStealSpeed)
                    StealBrainrot()
                end
            end)
        end
    end,
})

-- Slider per impostare brainrot manualmente
MainTab:CreateSlider({
    Name = "Imposta Brainrot Manualmente",
    Range = {0, 999999},
    Increment = 1,
    Suffix = "Brainrot",
    CurrentValue = 0,
    Flag = "ManualBrainrot",
    Callback = function(Value)
        BrainrotRubati = Value
        CounterLabel:Set("Brainrot Rubati: " .. BrainrotRubati)
    end,
})

-- Reset button
MainTab:CreateButton({
    Name = "üîÑ RESET CONTATORE",
    Callback = function()
        BrainrotRubati = 0
        CounterLabel:Set("Brainrot Rubati: 0")
        Rayfield:Notify({
            Title = "Reset Completato!",
            Content = "Contatore azzerato",
            Duration = 2,
            Image = 4483362458
        })
    end,
})

-- Mega steal button
MainTab:CreateButton({
    Name = "üí• MEGA STEAL (+100)",
    Callback = function()
        BrainrotRubati = BrainrotRubati + 100
        CounterLabel:Set("Brainrot Rubati: " .. BrainrotRubati)
        Rayfield:Notify({
            Title = "MEGA STEAL!",
            Content = "+100 Brainrot rubati!",
            Duration = 2,
            Image = 4483362458
        })
    end,
})

print("üçë BRAINROT HEIST GUI caricata con successo!")
