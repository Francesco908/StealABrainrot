    flyLabel.Parent = mainContent
    
    local flySwitch = createSwitch(mainContent, UDim2.new(1, -65, 0, 135), function(enabled)
        toggleFly(enabled)
    end)
    
    -- Teleport Button
    local tpBtn = Instance.new("TextButton")
