        local rootPart = getRootPart()
        local height = tonumber(heightInput.Text) or 50
        if rootPart then
            rootPart.CFrame = rootPart.CFrame + Vector3.new(0, height, 0)
        end
    end)
    
    downBtn.MouseButton1Click:Connect(function()
