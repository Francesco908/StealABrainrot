-- ESP Functions
function enableESP()
    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= player and otherPlayer.Character and otherPlayer.Character:FindFirstChild("HumanoidRootPart") then
            createESPForPlayer(otherPlayer)
        end
    end
    connections.playerAdded = Players.PlayerAdded:Connect(function(np)
        np.CharacterAdded:Connect(function(char)
            if espEnabled then task.wait(1); createESPForPlayer(np) end
        end)
    end)
end

function disableESP()
    for _, espObject in pairs(espObjects) do
        if espObject then espObject:Destroy() end
    end
    espObjects = {}
    if connections.playerAdded then connections.playerAdded:Disconnect() end
end

function createESPForPlayer(tp)
    if not (tp.Character and tp.Character:FindFirstChild("HumanoidRootPart")) then return end
    local h = Instance.new("Highlight", tp.Character)
    h.Name = "ESP_" .. tp.Name
    h.FillColor = Color3.fromRGB(0, 162, 255)
    h.OutlineColor = Color3.fromRGB(0, 162, 255)
    h.FillTransparency = 0.5
    h.OutlineTransparency = 0
    espObjects[tp.Name] = h
    tp.Character.AncestryChanged:Connect(function()
        if not tp.Character.Parent then
            if espObjects[tp.Name] then espObjects[tp.Name]:Destroy(); espObjects[tp.Name] = nil end
        end
    end)
end

-- Enhanced Teleport to Base
function teleportToBase(targetPosition)
    if teleporting then return end
    teleporting = true
    
    local character = player.Character
    if not character then return end
    local humanoid = character:FindFirstChild("Humanoid")
    local root = character:FindFirstChild("HumanoidRootPart")
    if not humanoid or not root then return end
    
    local flightOverlay = Instance.new("Frame")
    flightOverlay.Name = "FlightOverlay"
    flightOverlay.Size = UDim2.new(1, 0, 1, 0)
    flightOverlay.Position = UDim2.new(0, 0, 0, 0)
    flightOverlay.BackgroundColor3 = Color3.new(0, 0, 0)
    flightOverlay.BackgroundTransparency = 0.5
    flightOverlay.ZIndex = 10
    flightOverlay.Parent = screenGui
    
    local flightText = Instance.new("TextLabel")
    flightText.Size = UDim2.new(0, 300, 0, 100)
    flightText.Position = UDim2.new(0.5, -150, 0.5, -50)
    flightText.BackgroundTransparency = 1
    flightText.Text = "FLYING TO CHECKPOINT"
    flightText.TextColor3 = Color3.new(1, 1, 1)
    flightText.TextScaled = true
    flight coletflightText.Font = Enum.Font.GothamBold
    flightText.ZIndex = 11
    flightText.Parent = flightOverlay
    
    local highPosition = Vector3.new(root.Position.X, 165, root.Position.Z)
    root.CFrame = CFrame.new(highPosition)
    
    local targetHighPosition = Vector3.new(targetPosition.X, 165, targetPosition.Z)
    local tween = TweenService:Create(root, TweenInfo.new(3, Enum.EasingStyle.Linear), {CFrame = CFrame.new(targetHighPosition)})
    tween:Play()
    tween.Completed:Wait()
    
    local downTween = TweenService:Create(root, TweenInfo.new(2, Enum.EasingStyle.Quad), {CFrame = CFrame.new(targetPosition)})
    downTween:Play()
    downTween.Completed:Wait()
    
    flightOverlay:Destroy()
    teleporting = false
end

-- Enhanced Auto Escape
function autoEscapeSequence(targetPosition)
    if teleporting or autoEscapeCooldown then return end
    teleporting = true
    autoEscapeCooldown = true
    
    local character = player.Character
    if not character then return end
    local humanoid = character:FindFirstChild("Humanoid")
    local root = character:FindFirstChild("HumanoidRootPart")
    if not humanoid or not root then return end
    
    local escapeOverlay = Instance.new("Frame")
    escapeOverlay.Name = "EscapeOverlay"
    escapeOverlay.Size = UDim2.new(1, 0, 1, 0)
    escapeOverlay.Position = UDim2.new(0, 0, 0, 0)
    escapeOverlay.BackgroundColor3 = Color3.new(0.8, 0.1, 0.1)
    escapeOverlay.BackgroundTransparency = 0.5
    escapeOverlay.ZIndex = 10
    escapeOverlay.Parent = screenGui
    
    local escapeText = Instance.new("TextLabel")
    escapeText.Size = UDim2.new(0, 300, 0, 100)
    escapeText.Position = UDim2.new(0.5, -150, 0.5, -50)
    escapeText.BackgroundTransparency = 1
    escapeText.Text = "AUTO ESCAPE ACTIVATED"
    escapeText.TextColor3 = Color3.new(1, 1, 1)
    escapeText.TextScaled = true
    escapeText.Font = Enum.Font.GothamBold
    escapeText.ZIndex = 11
    escapeText.Parent = escapeOverlay
    
    local highPosition = Vector3.new(root.Position.X, 165, root.Position.Z)
    root.CFrame = CFrame.new(highPosition)
    task.wait(0.5)
    
    local targetHighPosition = Vector3.new(targetPosition.X, 165, targetPosition.Z)
    local tween = TweenService:Create(root, TweenInfo.new(2, Enum.EasingStyle.Linear), {CFrame = CFrame.new(targetHighPosition)})
    tween:Play()
    tween.Completed:Wait()
    
    local downTween = TweenService:Create(root, TweenInfo.new(1.5, Enum.EasingStyle.Quad), {CFrame = CFrame.new(targetPosition)})
    downTween:Play()
    downTween.Completed:Wait()
    
    escapeOverlay:Destroy()
    teleporting = false
    task.delay(15, function() autoEscapeCooldown = false end)
end

-- Auto Escape Trigger
RunService.Heartbeat:Connect(function()
    if player.Character and player.Character:FindFirstChild("Humanoid") and checkpoints[1] then
        local humanoid = player.Character.Humanoid
        if humanoid.FloorMaterial == Enum.Material.Air and humanoid.RootPart.Velocity.Y < -50 then
            autoEscapeSequence(checkpoints[#checkpoints])
        elseif humanoid.Health < 20 then
            autoEscapeSequence(checkpoints[#checkpoints])
        end
    end
end)

-- Notification System
function createNotification(text, duration)
    local notifGui = Instance.new("Frame")
    notifGui.Name = "Notification"
    notifGui.Size = UDim2.new(0, 300, 0, 50)
    notifGui.Position = UDim2.new(0.5, -150, 0.1, 0)
    notifGui.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    notifGui.BackgroundTransparency = 0.3
    notifGui.BorderSizePixel = 0
    notifGui.ZIndex = 100
    notifGui.Parent = screenGui
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = notifGui
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextScaled = true
    label.Font = Enum.Font.GothamBold
    label.Parent = notifGui
    
    task.spawn(function()
        for i = 1, duration*10 do
            task.wait(0.1)
        end
        notifGui:Destroy()
    end)
    
    return notifGui
end

-- Infinite Jump Logic
local function handleInfiniteJump()
    if infiniteJumpEnabled and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local shouldJump = UserInputService:IsKeyDown(Enum.KeyCode.Space) or mobileJumping
        
        if shouldJump then
            local root = player.Character.HumanoidRootPart
            local bv = root:FindFirstChild("InfiniteJumpVelocity") or Instance.new("BodyVelocity", root)
            bv.Name = "InfiniteJumpVelocity"
            bv.MaxForce = Vector3.new(0, math.huge, 0)
            bv.Velocity = Vector3.new(0, 50, 0)
            task.wait(0.1)
            if bv then bv:Destroy() end
        end
    else
        local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
        if root then
            local bv = root:FindFirstChild("InfiniteJumpVelocity")
            if bv then bv:Destroy() end
        end
    end
end

-- Tab Switching
for name, btn in pairs(tabButtons) do
    btn.MouseButton1Click:Connect(function()
        for _, c in pairs(tabContents) do c.Visible = false end
        for _, b in pairs(tabButtons) do b.BackgroundColor3 = Color3.fromRGB(45, 45, 45) end
        tabContents[name].Visible = true
        btn.BackgroundColor3 = Color3.fromRGB(0, 123, 255)
    end)
end
tabButtons["Main"].BackgroundColor3 = Color3.fromRGB(0, 123, 255)

-- Minimize/Close Functions
local isMinimized = false
minimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    if isMinimized then
        TweenService:Create(mainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 400, 0, 40)}):Play()
        tabFrame.Visible = false
        contentFrame.Visible = false
        minimizeButton.Text = "+"
    else
        TweenService:Create(mainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 400, 0, 300)}):Play()
        tabFrame.Visible = true
        contentFrame.Visible = true
        minimizeButton.Text = "-"
    end
end)

closeButton.MouseButton1Click:Connect(function()
    disableESP()
    for _, conn in pairs(connections) do if conn then conn:Disconnect() end end
    if mobileJumpButton then mobileJumpButton:Destroy() end
    screenGui:Destroy()
end)

-- Main Loop & Events
connections.heartbeat = RunService.Heartbeat:Connect(handleInfiniteJump)
connections.characterAdded = player.CharacterAdded:Connect(function(char)
    task.wait(1)
    if speedHackEnabled and char:FindFirstChild("Humanoid") then
        originalWalkSpeed = char.Humanoid.WalkSpeed
        char.Humanoid.WalkSpeed = originalWalkSpeed * 1.5
    end
    if espEnabled then task.wait(1); enableESP() end
end)

print("Steal a brainrot Script loaded successfully!")
