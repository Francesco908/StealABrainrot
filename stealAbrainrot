    heightLabel.BackgroundTransparency = 1
    heightLabel.Text = "Height:"
    heightLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    heightLabel.TextScaled = true
    heightLabel.Font = Enum.Font.SourceSans
    heightLabel.Parent = tpFrame
    
