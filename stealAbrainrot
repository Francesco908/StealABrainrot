-- Script for Steal A Brainrot
-- by ZNFPRO
-- Using Neverlose UI by Mana42138

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local hrp = character:WaitForChild("HumanoidRootPart")
local defaultSpeed = humanoid.WalkSpeed
local savedPosition = nil

-- Load Neverlose UI from GitHub repo
local Neverlose_Main = loadstring(game:HttpGet("https://raw.githubusercontent.com/Mana42138/Neverlose-UI/main/Source.lua"))()
local window = Neverlose_Main:Main("Steal A Brainrot - by ZNFPRO", Color3.fromRGB(0,120,255)) -- blue theme

local mainPage = window:Page("Main")

-- Speed Boost Toggle
local speedBoostEnabled = false
mainPage:Switch("Speed Boost +45%", false, function(state)
    speedBoostEnabled = state
    if speedBoostEnabled then
        humanoid.WalkSpeed = defaultSpeed * 1.45
        Neverlose_Main:Notification("Speed Boost Enabled!")
    else
        humanoid.WalkSpeed = defaultSpeed
        Neverlose_Main:Notification("Speed Boost Disabled!")
    end
end)

-- Maintain speed boost even when holding tools
RunService.Stepped:Connect(function()
    if speedBoostEnabled and humanoid.WalkSpeed ~= defaultSpeed * 1.45 then
        humanoid.WalkSpeed = defaultSpeed * 1.45
    end
end)

-- Set Teleport Point Button
mainPage:Button("Set Teleport Point", function()
    character = player.Character or player.CharacterAdded:Wait()
    hrp = character:WaitForChild("HumanoidRootPart")
    savedPosition = hrp.CFrame
    Neverlose_Main:Notification("Teleport Point Saved!")
end)

-- Teleport To Point Button (walking speed)
mainPage:Button("Teleport To Point (Walking Speed)", function()
    if savedPosition then
        character = player.Character or player.CharacterAdded:Wait()
        hrp = character:WaitForChild("HumanoidRootPart")

        local distance = (hrp.Position - savedPosition.p).Magnitude
        local walkSpeed = 16 -- walk speed
        local duration = distance / walkSpeed
        local tweenInfo = TweenInfo.new(duration, Enum.EasingStyle.Linear)
        local tween = TweenService:Create(hrp, tweenInfo, {CFrame = savedPosition})

        tween:Play()
        tween.Completed:Wait()

        Neverlose_Main:Notification("Teleported at walking speed!")
    else
        Neverlose_Main:Notification("No teleport point saved!")
    end
end)
