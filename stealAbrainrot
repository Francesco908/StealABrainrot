-- Simple Roblox Script with Rayfield UI
-- Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Wait for game
repeat wait() until game:IsLoaded()

-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Wait for character
repeat wait() until LocalPlayer.Character
repeat wait() until LocalPlayer.Character:FindFirstChild("HumanoidRootPart")

-- Variables
local basePosition = Vector3.new(0, 10, 0)
local originalSpeed = 16

-- Auto-set base position to current character position
local function setBaseToCurrentPosition()
   local char = LocalPlayer.Character
   if char and char:FindFirstChild("HumanoidRootPart") then
      basePosition = char.HumanoidRootPart.Position
   end
end

-- Set base position when character spawns
setBaseToCurrentPosition()
LocalPlayer.CharacterAdded:Connect(function()
   repeat wait() until LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
   setBaseToCurrentPosition()
end)

-- Create Window
local Window = Rayfield:CreateWindow({
   Name = "Simple Hub",
   LoadingTitle = "Loading...",
   LoadingSubtitle = "by OnlyRobloxScript",
   ConfigurationSaving = {
      Enabled = false
   },
   Discord = {
      Enabled = false
   },
   KeySystem = false
})

-- Create Tab
local Tab = Window:CreateTab("Main", 4483362458)

-- Speed Boost Section
Tab:CreateSection("Speed Boost")

Tab:CreateButton({
   Name = "Speed Boost +45%",
   Callback = function()
      local char = LocalPlayer.Character
      if char and char:FindFirstChild("Humanoid") then
         char.Humanoid.WalkSpeed = originalSpeed * 1.45
         Rayfield:Notify({
            Title = "Speed Boost",
            Content = "Speed increased by 45%!",
            Duration = 3,
            Image = 4483362458
         })
      end
   end
})

Tab:CreateButton({
   Name = "Reset Speed",
   Callback = function()
      local char = LocalPlayer.Character
      if char and char:FindFirstChild("Humanoid") then
         char.Humanoid.WalkSpeed = originalSpeed
         Rayfield:Notify({
            Title = "Speed Reset",
            Content = "Speed reset to normal",
            Duration = 3,
            Image = 4483362458
         })
      end
   end
})

-- Teleport Section
Tab:CreateSection("Base Teleport")

Tab:CreateInput({
   Name = "Set TP Base (X,Y,Z)",
   PlaceholderText = "0,10,0",
   RemoveTextAfterFocusLost = false,
   Callback = function(text)
      local x, y, z = text:match("([^,]+),([^,]+),([^,]+)")
      if x and y and z then
         x, y, z = tonumber(x), tonumber(y), tonumber(z)
         if x and y and z then
            basePosition = Vector3.new(x, y, z)
            Rayfield:Notify({
               Title = "Base Set",
               Content = "Base position updated!",
               Duration = 3,
               Image = 4483362458
            })
         end
      end
   end
})

Tab:CreateButton({
   Name = "Teleport to Base",
   Callback = function()
      local char = LocalPlayer.Character
      if char and char:FindFirstChild("HumanoidRootPart") then
         char.HumanoidRootPart.CFrame = CFrame.new(basePosition)
         Rayfield:Notify({
            Title = "Teleported",
            Content = "Teleported to base!",
            Duration = 3,
            Image = 4483362458
         })
      end
   end
})

Tab:CreateButton({
   Name = "Set Current Position as Base",
   Callback = function()
      local char = LocalPlayer.Character
      if char and char:FindFirstChild("HumanoidRootPart") then
         basePosition = char.HumanoidRootPart.Position
         Rayfield:Notify({
            Title = "Base Updated",
            Content = "Current position set as base!",
            Duration = 3,
            Image = 4483362458
         })
      end
   end
})

-- Success notification
Rayfield:Notify({
   Title = "Script Loaded",
   Content = "Simple Hub ready!",
   Duration = 4,
   Image = 4483362458
})
