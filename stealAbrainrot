    Name = "Brainrot Hub Pro",
    LoadingTitle = "Loading Pro Version...",
    LoadingSubtitle = "Admin tools for everyone",
    ConfigurationSaving = {Enabled = false},
    Discord = {Enabled = false},
    KeySystem = false
})

-- Main Tab
