-- Rendere lo Steal Helper movibile
local dragging, dragInput, dragStart
StealHelper.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

StealHelper.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        StealHelper.Position = UDim2.new(
            0, StealHelper.AbsolutePosition.X + delta.X,
            0, StealHelper.AbsolutePosition.Y + delta.Y
        )
        dragStart = input.Position
    end
end)

-- Sistema Teleporter con Bypass Anti-Cheat
local savedBasePosition = nil
local teleportInProgress = false

local function TeleportToBase()
    if teleportInProgress then return end
    if not savedBasePosition then return end
    
    teleportInProgress = true
    local character = LocalPlayer.Character
    if not character then return end
    local humanoid = character:FindFirstChild("Humanoid")
    local hrp = character:FindFirstChild("HumanoidRootPart")
    if not humanoid or not hrp then return end
    
    -- Salva stato originale
    local originalWalkSpeed = humanoid.WalkSpeed
    local originalJumpPower = humanoid.JumpPower
    
    -- Fase 1: Teletrasporto a 165 di altezza
    local skyPosition = Vector3.new(hrp.Position.X, 165, hrp.Position.Z)
    hrp.CFrame = CFrame.new(skyPosition)
    humanoid.WalkSpeed = 0
    humanoid.JumpPower = 0
    
    -- Mostra timer
    local teleportGui = Instance.new("ScreenGui")
    teleportGui.Name = "TeleportCountdown"
    teleportGui.Parent = game.CoreGui
    
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0.2, 0, 0.1, 0)
    frame.Position = UDim2.new(0.4, 0, 0.05, 0)
    frame.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
    frame.BackgroundTransparency = 0.3
    frame.BorderSizePixel = 0
    frame.Parent = teleportGui
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0.2, 0)
    corner.Parent = frame
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = "‚è±Ô∏è Teletrasporto in 3..."
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 18
    label.Parent = frame
    
    -- Countdown
    for i = 3, 1, -1 do
        label.Text = "‚è±Ô∏è Teletrasporto in "..i.."..."
        wait(1)
    end
    
    -- Fase 2: Teletrasporto alla base con bypass anti-cheat
    -- Simula movimento naturale
    humanoid.WalkSpeed = 16
    humanoid.JumpPower = 50
    
    -- Usa tweening per movimento realistico
    local tweenInfo = TweenInfo.new(
        1.5, -- Durata
        Enum.EasingStyle.Linear, -- Stile
        Enum.EasingDirection.Out, -- Direzione
        0, -- Ripetizioni
        false, -- Inverti
        0 -- Delay
    )
    
    local tween = TweenService:Create(hrp, tweenInfo, {CFrame = CFrame.new(savedBasePosition)})
    tween:Play()
    
    wait(1.5)
    
    -- Assicura il posizionamento esatto
    hrp.CFrame = CFrame.new(savedBasePosition)
    hrp.Velocity = Vector3.new(0, 0, 0)
    hrp.AssemblyLinearVelocity = Vector3.new(0, 0, 0)
    
    -- Ripristina valori originali
    humanoid.WalkSpeed = originalWalkSpeed
    humanoid.JumpPower = originalJumpPower
    
    -- Pulizia
    teleportGui:Destroy()
    teleportInProgress = false
end

