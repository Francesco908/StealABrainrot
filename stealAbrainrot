    -- Tab button
    local tabBtn = new("TextButton", {
        Parent = TabContainer,
        Size = UDim2.new(1/#tabs, -5, 1, 0),
        Position = UDim2.new((i-1)/#tabs, 2.5, 0, 0),
        BackgroundColor3 = Color3.fromRGB(35, 35, 45),
