-- OnlyRobloxScript Rayfield UI Script
-- by OnlyRobloxScript

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local hrp = character:WaitForChild("HumanoidRootPart")
local defaultSpeed = humanoid.WalkSpeed
local savedPosition = nil

local TweenService = game:GetService("TweenService")

local Window = Rayfield:CreateWindow({
    Name = "OnlyRobloxScript HUB",
    LoadingTitle = "Loading OnlyRobloxScript...",
    LoadingSubtitle = "by OnlyRobloxScript",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "OnlyRobloxScript",
        FileName = "OnlyRobloxScriptConfig"
    },
    Discord = {
        Enabled = false,
    },
    KeySystem = false,
})

local Tab = Window:CreateTab("OnlyRobloxScript Features", 4483362458)

-- Speed Boost +30%
Tab:CreateToggle({
    Name = "Speed Boost +30%",
    CurrentValue = false,
    Callback = function(Value)
        if Value then
            humanoid.WalkSpeed = defaultSpeed * 1.3
            Rayfield:Notify({
                Title = "OnlyRobloxScript",
                Content = "Speed Boost activated!",
                Duration = 3,
            })
        else
            humanoid.WalkSpeed = defaultSpeed
            Rayfield:Notify({
                Title = "OnlyRobloxScript",
                Content = "Speed Boost deactivated!",
                Duration = 3,
            })
        end
    end,
})

-- Set Teleport Point
Tab:CreateButton({
    Name = "üìç Set Teleport Point",
    Callback = function()
        character = player.Character or player.CharacterAdded:Wait()
        hrp = character:WaitForChild("HumanoidRootPart")
        savedPosition = hrp.CFrame
        Rayfield:Notify({
            Title = "OnlyRobloxScript",
            Content = "Teleport point saved!",
            Duration = 3,
        })
    end,
})

-- Teleport to Saved Point with TweenService (basic bypass)
Tab:CreateButton({
    Name = "üöÄ Teleport To Point (OnlyRobloxScript Bypass)",
    Callback = function()
        if savedPosition then
            character = player.Character or player.CharacterAdded:Wait()
            hrp = character:WaitForChild("HumanoidRootPart")
            local tweenInfo = TweenInfo.new(
                2, -- duration 2 seconds
                Enum.EasingStyle.Linear
            )
            local tween = TweenService:Create(hrp, tweenInfo, {CFrame = savedPosition})
            tween:Play()
            Rayfield:Notify({
                Title = "OnlyRobloxScript",
                Content = "Teleporting...",
                Duration = 3,
            })
        else
            Rayfield:Notify({
                Title = "OnlyRobloxScript",
                Content = "No teleport point saved!",
                Duration = 3,
            })
        end
    end,
})
