--[[ UI BY OnlyRobloxScript ]]--

-- Load Rayfield UI Library
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

-- Create Main Window
local Window = Rayfield:CreateWindow({
    Name = "OnlyRobloxScript Hub",
    LoadingTitle = "OnlyRobloxScript UI",
    LoadingSubtitle = "BY OnlyRobloxScript",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "OnlyRobloxScriptConfig"
    },
    Discord = {
        Enabled = false,
        Invite = "",
        RememberJoins = false
    },
    KeySystem = false
})

-- Create Main Tab
local MainTab = Window:CreateTab("Main", 4483362458)

-- Section: Teleport & Speed
MainTab:CreateSection("Teleport & Speed Boost")

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Teleport To Player Dropdown
local playerDropdown = nil
local selectedPlayer = nil

playerDropdown = MainTab:CreateDropdown({
    Name = "Select Player to Teleport",
    Options = {},
    CurrentOption = "",
    Flag = "PlayerDropdown",
    Callback = function(option)
        selectedPlayer = option
    end
})

-- Update Dropdown Options
local function UpdatePlayerList()
    local names = {}
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            table.insert(names, player.Name)
        end
    end
    if playerDropdown then
        playerDropdown:UpdateOptions(names)
    end
end

UpdatePlayerList()
Players.PlayerAdded:Connect(UpdatePlayerList)
Players.PlayerRemoving:Connect(UpdatePlayerList)

-- Teleport to selected player
MainTab:CreateButton({
    Name = "Teleport to Selected Player",
    Callback = function()
        local target = Players:FindFirstChild(selectedPlayer)
        if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
            local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                hrp.CFrame = target.Character.HumanoidRootPart.CFrame
                Rayfield:Notify({
                    Title = "Teleport Success",
                    Content = "You teleported to " .. selectedPlayer,
                    Duration = 3.5,
                    Image = 4483362458,
                    Actions = { Ignore = true }
                })
            end
        else
            Rayfield:Notify({
                Title = "Teleport Failed",
                Content = "Invalid target player.",
                Duration = 3.5,
                Image = 4483362458,
                Actions = { Ignore = true }
            })
        end
    end
})

-- Speed Slider
MainTab:CreateSlider({
    Name = "Speed Boost",
    Range = {16, 100},
    Increment = 1,
    Suffix = "Speed",
    CurrentValue = 16,
    Flag = "SpeedSlider",
    Callback = function(value)
        local char = LocalPlayer.Character
        if char and char:FindFirstChild("Humanoid") then
            char.Humanoid.WalkSpeed = value
        end
    end
})

-- Section: Custom TP
MainTab:CreateSection("Custom Teleport Location")

local customTP = Vector3.new(0, 0, 0)

-- Set Coordinates
MainTab:CreateTextbox({
    Name = "Set TP Coordinates (X,Y,Z)",
    PlaceholderText = "Example: 0,10,0",
    Flag = "SetTPBox",
    Callback = function(text)
        local x, y, z = text:match("([^,]+),([^,]+),([^,]+)")
        x, y, z = tonumber(x), tonumber(y), tonumber(z)
        if x and y and z then
            customTP = Vector3.new(x, y, z)
            Rayfield:Notify({
                Title = "Coordinates Set",
                Content = "Teleport location set to: " .. tostring(customTP),
                Duration = 3,
                Image = 4483362458
            })
        else
            Rayfield:Notify({
                Title = "Invalid Input",
                Content = "Please use format: X,Y,Z",
                Duration = 3,
                Image = 4483362458
            })
        end
    end
})

-- Teleport to custom position
MainTab:CreateButton({
    Name = "Teleport to Custom Location",
    Callback = function()
        local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        if hrp then
            hrp.CFrame = CFrame.new(customTP)
            Rayfield:Notify({
                Title = "Teleported",
                Content = "You teleported to: " .. tostring(customTP),
                Duration = 3,
                Image = 4483362458
            })
        end
    end
})
