local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/kav"))()

-- Tema personalizzato blu
local colors = {
    SchemeColor = Color3.fromRGB(0, 170, 255),
    Background = Color3.fromRGB(10, 10, 30),
    Header = Color3.fromRGB(0, 50, 100),
    TextColor = Color3.fromRGB(255, 255, 255),
    ElementColor = Color3.fromRGB(20, 20, 40)
}

local Window = Library.CreateLib("Steal A Brainrot - by ZNFPRO", colors)
local Tab = Window:NewTab("Main")
local Section = Tab:NewSection("Main Section")

-- Button
Section:NewButton("Click me!", "Prints clicked", function()
    print("Button clicked!")
end)

-- Toggle con variabile globale
getgenv().Toggled = false
local toggle = Section:NewToggle("Toggle Speed", "Toggle WalkSpeed", function(state)
    getgenv().Toggled = state
end)

-- Aggiorna il testo del toggle ogni frame
game:GetService("RunService").RenderStepped:Connect(function()
    if getgenv().Toggled then
        toggle:UpdateToggle("WalkSpeed ON")
    else
        toggle:UpdateToggle("WalkSpeed OFF")
    end
end)

-- Slider per WalkSpeed
Section:NewSlider("WalkSpeed", "Set WalkSpeed (0-500)", 500, 16, function(value)
    local plr = game.Players.LocalPlayer
    if plr and plr.Character and plr.Character:FindFirstChildOfClass("Humanoid") then
        plr.Character:FindFirstChildOfClass("Humanoid").WalkSpeed = value
    end
end)

-- TextBox
Section:NewTextBox("Say something", "Prints your text", function(text)
    print("You wrote: "..text)
end)

-- Keybind per togglare UI
Section:NewKeybind("Toggle UI", "Toggle UI visibility", Enum.KeyCode.P, function()
    Library:ToggleUI()
end)

-- Dropdown
local dropdown = Section:NewDropdown("Choose option", "Select one", {"Option 1", "Option 2", "Option 3"}, function(option)
    print("Selected: "..option)
end)

-- Refresh dropdown example
Section:NewButton("Refresh Dropdown", "Refresh dropdown options", function()
    dropdown:Refresh({"New Option 1", "New Option 2"})
end)

-- Color picker
Section:NewColorPicker("Change Scheme Color", "Change UI theme color", colors.SchemeColor, function(color)
    Library:ChangeColor("SchemeColor", color)
end)
