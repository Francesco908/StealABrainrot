    closeBaseBtn.Text = "‚ùå"
    closeBaseBtn.TextScaled = true
    closeBaseBtn.BorderSizePixel = 0
    closeBaseBtn.Parent = baseFrame
    
    local setBaseBtn = Instance.new("TextButton")
