-- VERSIONE 1: Minimalista
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local BrainrotRubati = 0

local Window = Rayfield:CreateWindow({
    Name = "BRAINROT HEIST",
    LoadingTitle = "Caricamento...",
    LoadingSubtitle = "by il tuo username"
})

local Tab = Window:CreateTab("Main")
local Label = Tab:CreateLabel("Brainrot Rubati: 0")

-- PULSANTE ISTANTANEO
Tab:CreateButton({
    Name = "ðŸ”“ RUBA ISTANTANEO",
    Callback = function()
        BrainrotRubati = BrainrotRubati + 1
        Label:Set("Brainrot Rubati: " .. BrainrotRubati)
    end,
})

print("GUI V1 LOADED")

-- VERSIONE 2: Con notifiche (rimuovi --[[ e --]] per usare)
--[[
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local BrainrotRubati = 0

local Window = Rayfield:CreateWindow({
    Name = "BRAINROT HEIST",
    LoadingTitle = "Caricamento...",
    LoadingSubtitle = "by il tuo username",
    ConfigurationSaving = {Enabled = false},
    KeySystem = false
})

local Tab = Window:CreateTab("Main", nil)
local Label = Tab:CreateLabel("Brainrot Rubati: 0")

-- PULSANTE ISTANTANEO
Tab:CreateButton({
    Name = "ðŸ”“ RUBA ISTANTANEO",
    Callback = function()
        BrainrotRubati = BrainrotRubati + 1
        Label:Set("Brainrot Rubati: " .. BrainrotRubati)
        Rayfield:Notify({
            Title = "Brainrot Rubato!",
            Content = "Totale: " .. BrainrotRubati,
            Duration = 1
        })
    end,
})

print("GUI V2 LOADED")
--]]

-- VERSIONE 3: Completa con auto steal (rimuovi --[[ e --]] per usare)
--[[
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local BrainrotRubati = 0

local Window = Rayfield:CreateWindow({
    Name = "BRAINROT HEIST",
    LoadingTitle = "Caricamento...",
    LoadingSubtitle = "by il tuo username",
    ConfigurationSaving = {Enabled = false},
    KeySystem = false
})

local Tab = Window:CreateTab("Main", 4483362458)
local Label = Tab:CreateLabel("Brainrot Rubati: 0")

local function StealBrainrot()
    BrainrotRubati = BrainrotRubati + 1
    Label:Set("Brainrot Rubati: " .. BrainrotRubati)
end

-- PULSANTE ISTANTANEO
Tab:CreateButton({
    Name = "ðŸ”“ RUBA ISTANTANEO",
    Callback = function()
        StealBrainrot()
    end,
})

-- MEGA STEAL
Tab:CreateButton({
    Name = "ðŸ’¥ MEGA STEAL (+100)",
    Callback = function()
        BrainrotRubati = BrainrotRubati + 100
        Label:Set("Brainrot Rubati: " .. BrainrotRubati)
    end,
})

-- AUTO STEAL
local AutoSteal = false
Tab:CreateToggle({
    Name = "Auto Steal",
    CurrentValue = false,
    Callback = function(Value)
        AutoSteal = Value
        if AutoSteal then
            spawn(function()
                while AutoSteal do
                    wait(0.1)
                    StealBrainrot()
                end
            end)
        end
    end,
})

-- RESET
Tab:CreateButton({
    Name = "ðŸ”„ RESET",
    Callback = function()
        BrainrotRubati = 0
        Label:Set("Brainrot Rubati: 0")
    end,
})

print("GUI V3 LOADED")
--]]
