-- Imposta Punto di Teletrasporto
OtherTab:CreateButton({
    Name = "🎯 Set Teleport Point",
    Callback = function()
        local char = Player.Character
        if char and char:FindFirstChild("HumanoidRootPart") then
            TeleportPoint = char.HumanoidRootPart.Position
            notify("Teleport Point Set", "High position saved", 3)
        else
            notify("Error", "Character not found", 3)
        end
    end
})

-- Teletrasporto alla Base
OtherTab:CreateToggle({
    Name = "🔁 Enemy Base Teleporter",
    CurrentValue = false,
    Flag = "BaseTeleporter",
    Callback = function(Value)
        BaseTeleportEnabled = Value
        if Value then
            Connections.BaseTeleport = RunService.Heartbeat:Connect(function()
                if not BaseTeleportEnabled then return end
                
                local char = Player.Character
                if not char or not char:FindFirstChild("HumanoidRootPart") then return end
                
                local root = char.HumanoidRootPart
                
                -- Controlla se siamo alla base avversaria
                if EnemyBasePosition and (root.Position - EnemyBasePosition).Magnitude < 15 then
                    root.CFrame = CFrame.new(TeleportPoint)
                    task.wait(0.2)
                    
                    -- Disabilita temporaneamente NoClip durante la caduta
                    local wasNoClip = NoClipEnabled
                    if wasNoClip then
                        NoClipEnabled = false
                        cleanupConnection("NoClip")
                    end
                    
                    -- Caduta controllata
                    local fallTime = 0
                    while char and root and root.Position.Y > EnemyBasePosition.Y + 5 do
                        task.wait(0.1)
                        fallTime = fallTime + 0.1
                        if fallTime > 5 then break end -- Timeout sicurezza
                    end
                    
                    -- Ritorna a NoClip se era attivo
                    if wasNoClip then
                        NoClipEnabled = true
                        Connections.NoClip = RunService.Stepped:Connect(function()
                            -- Codice NoClip...
                        end)
                    end
                end
            end)
            notify("Base Teleport Active", "Teleport to enemy base enabled", 3)
        else
            cleanupConnection("BaseTeleport")
        end
    end
})

