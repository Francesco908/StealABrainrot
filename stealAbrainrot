-- Installa Rayfield: https://github.com/shlexware/Rayfield
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

-- Variabile per tenere traccia dei Brainrot rubati
local BrainrotRubati = 0

-- Finestra principale (nascosta all'avvio)
local FinestraPrincipale = Rayfield:CreateWindow({
	Name = "BRAINROT HEIST",
	LoadingTitle = "Caricamento...",
	LoadingSubtitle = "by il tuo username",
	ConfigurationSaving = {
		Enabled = false
	},
	KeySystem = false
})

-- Pulsante nella schermata principale
local PulsanteMain = Rayfield:CreateButton({
	Name = "üçë APRI BRAINROT STEALER",
	Callback = function()
		FinestraPrincipale:Show() -- Mostra la finestra
	end,
})

-- Sezione "Instant Steal" nella finestra
local SezioneSteal = FinestraPrincipale:CreateSection("Instant Steal")

-- Etichetta contatore
local Contatore = FinestraPrincipale:CreateLabel("Brainrot Rubati: 0")

-- Pulsante per rubare (con effetto hold)
FinestraPrincipale:CreateButton({
	Name = "üîì Tieni premuto per rubare",
	Callback = function()
		-- Non necessario, gestiamo l'hold separatamente
	end,
})

-- Funzione per rubare
local function RubaBrainrot()
	BrainrotRubati += 1
	Contatore:Set("Brainrot Rubati: "..BrainrotRubati)
	
	-- Effetto visivo
	game:GetService("TweenService"):Create(
		script.Parent.Contatore, 
		TweenInfo.new(0.2, Enum.EasingStyle.Quad), 
		{TextColor3 = Color3.fromRGB(0, 255, 0)}
	):Play()
	task.wait(0.3)
	game:GetService("TweenService"):Create(
		script.Parent.Contatore, 
		TweenInfo.new(0.2, Enum.EasingStyle.Quad), 
		{TextColor3 = Color3.fromRGB(255, 255, 255)}
	):Play()
end

-- Rilevatore di "hold" sul pulsante
script.Parent:WaitForChild("RubareButton").MouseButton1Down:Connect(function()
	RubaBrainrot() -- Ruba al primo click
	
	while game:GetService("UserInputService"):IsMouseButtonPressed(Enum.UserInputType.MouseButton1) do
		task.wait(0.1) -- Ruba ogni 0.1 secondi
		RubaBrainrot()
	end
end)

-- Nascondi la finestra all'avvio
FinestraPrincipale:Hide()
